@model TuyenSinh.Models.QuestionViewModel

@{
    ViewData["Title"] = "DangKyHocBa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/admin/js/custemUrl.js"></script>

<div id="toTop"></div>
<h3 style="text-align:center;color:blue;">
    ĐẶT CÂU HỎI
</h3>

<div class="row" style="">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel">
            <form asp-action="DatCauHoi" asp-controller="Question" method="post">
                <div class="panel-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Tiêu đề</label>
                        <input asp-for="Name" id="txtName" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="Url" id="txtUrl" class="form-control" />
                    <div class="col-12 col-md-12">
                        <div class="form-group" style="display: flex; align-items: center; justify-content: center; margin-top: 25px; }">
                            <input type="submit" value="Gửi" class="btn btn-primary" />
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>