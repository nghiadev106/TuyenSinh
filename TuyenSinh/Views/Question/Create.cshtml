@model TuyenSinh.Models.QuestionViewModel

@{
    ViewData["Title"] = "DangKyHocBa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="toTop"></div>
<h3 style="text-align:center;color:blue;">
    ĐẶT CÂU HỎI
</h3>
<div class="row" style="padding-top:10px">
    <div class="col-md-10 col-md-offset-1">
        <div class="panel">
            <div class="panel-body">
                <form asp-action="Create" asp-controller="Question" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                        </div>
                     
                        <div class="col-12 col-md-12">
                            <div class="form-group" style="display: flex; align-items: center; justify-content: center; margin-top: 25px; }">
                                <input type="submit" value="Đăng ký" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
