@model List<TuyenSinh.Model.Student>
@{
    Layout = "_LayoutAdmin";
    var students = (List<TuyenSinh.Model.Student>)ViewBag.students;
}

<input type="hidden" id="success" value="@TempData["success"]" />
<input type="hidden" id="warning" value="@TempData["warning"]" />
<input type="hidden" id="error" value="@TempData["error"]" />

<div class="container-fluid">
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Danh sách thí sinh</li>
    </ol>
    <div class="card mb-12">
        <div class="card-body">
            <div class="table-responsive">
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên</th>
                                <th>SĐT</th>
                                <th>Email</th>
                                <th>Địa chỉ</th>
                                <th>Trạng thái</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var stt = 0;
                                @foreach (var item in Model)
                                {
                            <tr>
                                <td>@Html.Raw(stt = stt + 1)</td>
                                <td>@item.Name</td>
                                <td>@item.Phone</td>
                                <td>@item.Email</td>
                                <td>@item.Address</td>
                                
                                @if (item.Status == 0)
                                {
                                    <td>Đăng ký</td>
                                }else if (item.Status == 1)
                                {
                                    <td>Trúng tuyển</td>
                                }
                                else
                                {
                                    <td>Trượt</td>
                                }
                                @*<td>@item.Dob.Value.ToString("dd/MM/yyyy")</td>*@
                                <td>
                                    <a href="/Admin/Student/Detail/@item.Id" class="btn btn-primary glyphicon glyphicon-pencilt">Xem</a>
                                </td>
                            </tr>
                                }
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <span>Không có thí sinh nào</span>
                }

            </div>
        </div>
    </div>
</div>