@model TuyenSinh.Areas.Admin.Models.Major.MajorRequest
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section js{
    <script src="~/admin/js/custemUrl.js"></script>
}
<input type="hidden" id="success" value="@TempData["success"]" />
<input type="hidden" id="warning" value="@TempData["warning"]" />
<input type="hidden" id="error" value="@TempData["error"]" />

<div class="container-fluid">
    <h1 class="mt-4">Cập nhật danh mục</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Cập nhật danh mục</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="Major" asp-area="admin">Về danh sách</a>
        </div>

        <div class="card-body">
            <form asp-action="Edit" asp-controller="Major" asp-area="Admin" method="post">
                <div class="row">
                    <div class="col-md-8">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label"> Tên danh mục</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label"> Mã ngành</label>
                            <input asp-for="Code" class="form-control" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Mô tả</label>
                            <textarea asp-for="Description" rows="5" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Tổ hợp 1</label><br />
                            <select asp-for="Combination1" class="form-control" asp-items="ViewBag.combinationList"></select>
                            <span asp-validation-for="Combination1" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Tổ hợp 2</label><br />
                            <select asp-for="Combination2" class="form-control" asp-items="ViewBag.combinationList"></select>
                            <span asp-validation-for="Combination2" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Tổ hợp 3</label><br />
                            <select asp-for="Combination3" class="form-control" asp-items="ViewBag.combinationList"></select>
                            <span asp-validation-for="Combination3" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Tổ hợp 4</label><br />
                            <select asp-for="Combination4" class="form-control" asp-items="ViewBag.combinationList"></select>
                            <span asp-validation-for="Combination4" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Cập nhật" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
